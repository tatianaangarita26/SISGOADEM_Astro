---
import { Icon } from "astro-icon";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";


const features: Array<FeatureItem> = [
  
  {
    title: "1",
    description:
      "Aplicar las diferentes herramientas para el desarrollo y autonomía de la entidad. ",
    icon: "mdi:feather",
  },
  {
    title: "2",
    description:
      "Facilitar a los empleadores y trabajadores la administración de diferentes puestos que conforma dicha entidad.",
    icon: "mdi:directions-fork",
  },
  {
    title: "3",
    description:
      "Desarrollar el aplicativo donde se pueda manejar clientes, caja y cocina que conforman el sistema.",
    icon: "mdi:graph",
  },
];
---

<ContentSection title="Propósito General:" id="features">
  <Fragment slot="lead">
    crear un aplicativo que satisfaga las 
    <span class="text-primary">necesidades del cliente </span>
    en cuanto al sistema de 
    <span class="text-primary">gestión operacional y administrativo empresarial </span>
    para los restaurantes del centro del Huila.
</ContentSection>

<ContentSection title="Proposito Especifica:" id="features">
  
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="h-16 w-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>


